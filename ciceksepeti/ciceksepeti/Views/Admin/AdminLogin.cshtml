@model ciceksepeti.Models.admin

@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

<div class="container">
   
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div>
                            <img width="450" height="375" src="~/Images/laleee.jpg" />
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Giriş Yap</h1>
                                </div>
                                @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post))
                                {
                                    @Html.ValidationSummary(true)

                                 

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Kullanıcı Adı</label>
                                        <div>
                                            @Html.EditorFor(model => model.admin_kullaniciad, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.admin_kullaniciad, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Şifre</label>
                                        <div>
                                            @Html.EditorFor(model => model.admin_sifre, new { htmlAttributes = new { @class = "form-control", maxlength = "16", type = "password" } })
                                            @Html.ValidationMessageFor(model => model.admin_sifre, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <span style="color:orangered;">@Session["Hata"]</span>    

                                            <div class="form-group">
                                        <div>
                                            <input type="submit" value="Giriş Yap" class="btn btn-primary btn-block" />
                                        </div>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


