@model ciceksepeti.Models.kullanici

@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

<h2 style="text-align:center;">Giriş Yap</h2>

@using (Html.BeginForm("UserLogin","Home",FormMethod.Post)) 
{
    <div style="width:800px;padding-left:270px;" class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
        <div class="form-group">
            <div class="col-md-10">Email
                @Html.EditorFor(model => model.kullanici_email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kullanici_email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">Şifre
                @Html.EditorFor(model => model.kullanici_sifre, new { htmlAttributes = new { @class = "form-control" , type="password" } })
                @Html.ValidationMessageFor(model => model.kullanici_sifre, "", new { @class = "text-danger" })
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Giriş Yap" class="btn btn-default" />
            </div>
        </div>
    </div>
}
